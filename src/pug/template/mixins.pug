include example-code

mixin header()
	header.header
		.container
			.toggle-menu-btn.active
				span
				span
				span
			img.logo(src='images/logo.png')
			+menu()
			.header__right
				.auth_btn
				form.form-search
					input.header__search(name="search", type="text", autocomplete="off", placeholder="Поиск по сайту")

mixin menu()
	.menu
		each item in menu
			a(href= item.url, class={'active': item.active}).menu-item= item.title

mixin home-slider()
	.home-slider
		each item in slider1
			+slider-item(item)

mixin slider-item(item)
	.slider-item
		.people
			.people__avatar
				img(src=`images/${item.img}`)
			.people__name= item.name
			.people__status= item.status
			.like_btn
			.add_btn
		.text= item.text

mixin slider-item2(item)
	.slider-item
		.people
			.people__avatar
				img(src=`images/${item.img}`)
			.people__name= item.name
			.people__status= item.status
			.like_btn
			.add_btn


mixin experts()
	.experts
		.container
			h2.section-title Наши эксперты
			.experts-slider
				each item in slider2
					+slider-item2(item)
			h2.section-title Партнеры
	.bg-grey
		.container
			.partners
				.partner-item: img(src='images/partner.png')
				.partner-item: img(src='images/partner2.png')
				.partner-item: img(src='images/partner3.png')
				.partner-item: img(src='images/partner.png')
				.partner-item: img(src='images/partner2.png')



mixin footer()
	footer.footer
		.container
			.footer_links
				a.link(href="#") Пользовательское соглашение
				a.link(href="#") Соглашение об обработке персональных данных
				a.link(href="#") Служба поддержки
			.pdf_instruction

