mixin tabs()
  .tabs__header
    ul.tabs__list
      li.tabs__item.active(data-tab='in') Вход
      li.tabs__item(data-tab='up') Регистрация
  .tabs__body.active#in
    +signIn()
  .tabs__body#up
    +signUp()
  .tabs__body#expert
    +signExpert()

