mixin header()
  header.header
    .container
      .toggle-menu-btn.active
        span
        span
        span
      +modal3()
      a(href='/'): img.logo(src='images/logo.png')
      +menu('menu')
      .header__right
        .auth_btn
        +modal1()
        form.form-search
          input.header__search(name="search", type="text", autocomplete="off", placeholder="Поиск по сайту")

mixin menu(className)
  div(class= className)
    each item in menu
      a(href= item.url, class=className + '-item', class={'active': item.active})= item.title


