include example-code

mixin index()
  .container
    h1.home__title= title_h1
    .row
      .slider-objects
        each item in s1_list
          +item-object(item)

mixin item-object(item)
  .item
    .item__number= item.number
    .item__text= item.title

mixin project()
  .container
    .row
      h2.project__title Проекты
        a(href='#') все проекты
      .slider-project
        each item in s2_list
          +item-project(item)
mixin item-project(item)
  .item
    .item__image: img(src= 'assets/images/' + item.img)
    .item__content
      .title= item.title
      .text= item.description

mixin tarifs()
  .container
    .row
      h2.tarif__title Тарифы
        a(href='#') подробнее
      .slider-tarifs
        each item in s3_list
          +item-tarif(item)
mixin item-tarif(item)
  .item
    .item__content(class= 'item__content--'+ item.icon)
      .item__title= item.title
      .item__text= item.description
      .item__price
        span.value= item.price
        span.postfix / месяц
      +button({ text: 'попробовать' })

mixin instruction()
  .container
    .instruction
      .instruction__body
        .instruction__title Инструкция
        .instruction__sub-title Подзаголовок
        .instruction__list
          each item in s4_list
            .instruction__list-item
              .number= item.number
              .text= item.text

mixin contacts()
  .container