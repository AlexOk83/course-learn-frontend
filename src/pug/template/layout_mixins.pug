mixin field(params)
  .form-field
    if (params.placeholder && params.required)
      .placeholder= params.placeholder
    if (params.type === 'date')
      .arrow
      input.datePicker(type='text', placeholder= params.placeholder, required)
    else if (params.type === 'textArea')
      textarea(placeholder= params.placeholder, required)
    else if (params.type === 'file')
      input(type= params.type, id= params.id, required)
      label(for= params.id)= params.placeholder
    else
      input(type= params.type, placeholder= params.placeholder, required)
    if (params.type === 'password')
      .eye

mixin button(params)
  button.form-btn(disabled= params.disabled)= params.text

mixin radio(id, name, label, checked)
  input(type="radio" id= id, value= id, name= name, checked=checked)
  label(for= id)= label

